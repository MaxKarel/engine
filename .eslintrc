{
	"extends": "eslint:recommended",
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
		"brace-style": [
			2,
			"1tbs",
			{ "allowSingleLine": true }
		],
		"no-mixed-spaces-and-tabs": 2,
		"space-before-function-paren": [2, "never"],
		"no-spaced-func": 2,
		"space-before-blocks": [2, "always"],
		"space-in-parens": [2, "never"],
		"eqeqeq": [2, "smart"]
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    }
}
